LAYER
    NAME "point"
    GROUP "edit"
    TYPE POINT
    STATUS ON
    TEMPLATE fooOnlyForWMSGetFeatureInfo # For GetFeatureInfo
    CONNECTIONTYPE postgis
    PROCESSING "CLOSE_CONNECTION=DEFER" # For performance
    CONNECTION "${mapserver_connection}"
    DATA "geometry FROM (SELECT * FROM edit.point) AS foo USING UNIQUE id USING srid=3857"
    LABELITEM "name"
    PROJECTION
      "init=epsg:3857"
    END
    CLASS
        NAME "Point"
        STYLE
            SYMBOL "circle"
            SIZE 6
            WIDTH 1
            OUTLINECOLOR 30 0 0
            COLOR 230 0 0
        END
        LABEL
            COLOR 0 0 0
            OUTLINECOLOR 255 255 255
            FONT arial_bold
            TYPE truetype
            SIZE 10
            OFFSET 0 -13
        END
    END

    METADATA
        "wms_title" "Point"

        "gml_include_items" "all"
        "gml_types" "auto"
        "gml_featureid" "id"
        "gml_geom_type" "point"
        "gml_geometries" "geometry"
    END
END
